#/bin/bash

. setpaths

gedit tests/catastrophic.c &

echo ""
read -p "Press enter to run the original program..."
echo ""

tests/catastrophic

echo ""
read -p "Press enter to perform instrumentation and rewrite binary..."
echo ""

./fpinst -i -w --detect-cancel tests/catastrophic 2>/dev/null

echo ""
read -p "Press enter to run rewritten binary..."
echo ""

./mutant

echo ""
read -p "Press enter to run the log viewer..."
echo ""

./fpview d_cancel.log

echo ""

